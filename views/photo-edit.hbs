<div class="form">
  <h1>Edit Photo</h1>

  <form action="/gallery/{{id}}" method="POST">
    <label>Title</label>
    <input class="input" type="text" name="title" placeholder="{{title}}" value="{{title}}">

    <label>Image Link</label>
    <input class="input" type="text" name="link" placeholder="{{link}}" value="{{link}}">

    <label>Description</label>
    <input class="input" type="text" name="description" placeholder="{{description}}" value="{{description}}">

    <input type="hidden" name="_method" value="PUT">
    <input class="submit-btn blue" type="submit">
  </form>
</div>